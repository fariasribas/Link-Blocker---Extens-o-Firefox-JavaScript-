{
  "manifest_version": 2,
  "name": "Link Blocker",
  "version": "1.0",
  "description": "Blocks URLs based on click counts and whitelist settings.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "blockpage.html",
    "blockpage.js"
  ]
}
